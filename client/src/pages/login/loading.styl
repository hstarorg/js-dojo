.cssload-wrap {
  padding-top: 78px;
}

.cssload-wrap > div {
  left: calc(50% - 97px);
  position: relative;
  background-color: transparent;
  width: 195px;
  height: 195px;
  border-radius: 100%;
  -o-border-radius: 100%;
  -ms-border-radius: 100%;
  -webkit-border-radius: 100%;
  -moz-border-radius: 100%;
  overflow: hidden;
  color: rgb(0, 0, 0);
}

.cssload-wrap > div:nth-child(2) {
  width: 175px;
  height: 175px;
  top: -185px;
  left: calc(50% - 88px);
  line-height: 175px;
  text-align: center;
  color: darkred;
  font-size: 30px;
  font-weight: bold;
}

.cssload-wrap > div div {
  width: 146px;
  height: 146px;
  border-radius: 100%;
  -o-border-radius: 100%;
  -ms-border-radius: 100%;
  -webkit-border-radius: 100%;
  -moz-border-radius: 100%;
  filter: blur(29px);
  -o-filter: blur(29px);
  -ms-filter: blur(29px);
  -webkit-filter: blur(29px);
  -moz-filter: blur(29px);
  position: absolute;
}

.cssload-wrap > div div:nth-child(1) {
  background-color: red;
  animation: cssload-move 2.4s;
  -o-animation: cssload-move 2.4s;
  -ms-animation: cssload-move 2.4s;
  -webkit-animation: cssload-move 2.4s;
  -moz-animation: cssload-move 2.4s;
  animation-delay: 2.88s;
  -o-animation-delay: 2.88s;
  -ms-animation-delay: 2.88s;
  -webkit-animation-delay: 2.88s;
  -moz-animation-delay: 2.88s;
  animation-iteration-count: infinite;
  -o-animation-iteration-count: infinite;
  -ms-animation-iteration-count: infinite;
  -webkit-animation-iteration-count: infinite;
  -moz-animation-iteration-count: infinite;
  animation-timing-function: linear;
  -o-animation-timing-function: linear;
  -ms-animation-timing-function: linear;
  -webkit-animation-timing-function: linear;
  -moz-animation-timing-function: linear;
}

